<VirtualHost *>
        ServerAdmin webmaster@localhost

        DocumentRoot /var/lib/kmotion/www
        <Directory /var/lib/kmotion/www>
                # TRY WITHOUT INDEXES
                Options Indexes FollowSymLinks MultiViews
                # AllowOverride All
                AllowOverride None
                Order allow,deny
                allow from all
        </Directory>

        ErrorLog /var/log/apache2/error_kmotion.log

        # Possible values include: debug, info, notice, warn, error, crit,
        # alert, emerg.
        LogLevel warn

        CustomLog /var/log/apache2/access_kmotion.log combined

        
        
	Alias /camera_select/ /var/lib/kmotion/www/images/camera_select/
	Alias /view_select/ /var/lib/kmotion/www/images/view_select/
	Alias /misc/ /var/lib/kmotion/www/images/misc/
	Alias /function_select/ /var/lib/kmotion/www/images/function_select/
	Alias /images/ /var/lib/kmotion/images/

</VirtualHost>
